@page "/"
@inject NavigationManager Navigation
@rendermode InteractiveServer

<!-- Tela inicial do WhatsApp -->
<div style="min-height: 100vh; background: #075e54; display: flex; align-items: center; justify-content: center; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
    <div style="background: white; width: 100%; max-width: 400px; margin: 20px; border-radius: 8px; overflow: hidden; box-shadow: 0 2px 8px rgba(0,0,0,0.15);">
        
        <!-- Header do WhatsApp -->
        <div style="background: #075e54; padding: 40px 30px; text-align: center; color: white;">
            <div style="font-size: 60px; margin-bottom: 10px;">�</div>
            <h1 style="margin: 0; font-size: 24px; font-weight: normal;">WhatsApp</h1>
            <p style="margin: 10px 0 0 0; opacity: 0.8; font-size: 14px;">Conecte-se com seus contatos</p>
        </div>

        <!-- Conteúdo principal -->
        <div style="padding: 30px;">
            <div style="text-align: center; margin-bottom: 30px;">
                <h2 style="color: #333; font-size: 18px; margin-bottom: 10px;">Bem-vindo de volta</h2>
                <p style="color: #666; font-size: 14px;">Entre ou crie uma conta para começar</p>
            </div>

            <div style="display: flex; flex-direction: column; gap: 15px;">
                <button @onclick="GoToLogin" 
                        style="background: #25d366; color: white; border: none; padding: 15px; border-radius: 25px; font-size: 16px; cursor: pointer; transition: background 0.3s; font-weight: 500;"
                        onmouseover="this.style.background='#128c7e'" 
                        onmouseout="this.style.background='#25d366'">
                    Entrar
                </button>
                
                <button @onclick="GoToRegister" 
                        style="background: transparent; color: #25d366; border: 1px solid #25d366; padding: 15px; border-radius: 25px; font-size: 16px; cursor: pointer; transition: all 0.3s; font-weight: 500;"
                        onmouseover="this.style.background='#25d366'; this.style.color='white'" 
                        onmouseout="this.style.background='transparent'; this.style.color='#25d366'">
                    Criar conta
                </button>
            </div>

            <div style="text-align: center; margin-top: 30px; padding-top: 20px; border-top: 1px solid #eee;">
                <p style="color: #666; font-size: 12px; line-height: 1.4;">
                    Ao continuar, você concorda com nossos<br>
                    <a href="#" style="color: #25d366; text-decoration: none;">Termos de Serviço</a> e 
                    <a href="#" style="color: #25d366; text-decoration: none;">Política de Privacidade</a>
                </p>
            </div>
        </div>
    </div>
</div>

@code {
    private void GoToLogin()
    {
        Navigation.NavigateTo("/login-whatsapp");
    }
    
    private void GoToRegister()
    {
        Navigation.NavigateTo("/register");
    }
}
